@model TrainerApp.ViewModels.Lift
@using TrainerApp.ViewModels

@{
    ViewBag.Title = "New Entry";
}
<h2>@ViewBag.Title</h2>

@{Html.BeginForm("InsertWorkOut", "Home", FormMethod.Post, new { id = "userWorkOutEntryForm" });}

<fieldset>
	<legend>Workout Entry:</legend>

	<div class="intputContainer">
		<div class="labelContainer">
			@Html.LabelFor(m => m.Type)
		</div>
		@Html.EditorFor(m => m.Type)
	</div>
	<div class="intputContainer">
		<div class="labelContainer">
			@Html.LabelFor(m => m.Weight)
		</div>
		@Html.EditorFor(m => m.Weight)
	</div>
	<div class="intputContainer">
		<div class="labelContainer">
			@Html.LabelFor(m => m.Reps)
		</div>
		@Html.EditorFor(m => m.Reps)
	</div>
	<div class="intputContainer">
		<div class="labelContainer">
			@Html.LabelFor(m => m.Sets)
		</div>
			@Html.EditorFor(m => m.Sets)
		</div>

	<input type="submit" value="Submit">

</fieldset>

@{ Html.EndForm();}
